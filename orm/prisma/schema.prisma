generator client {
    provider        = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:../db/db.sqlite"
}

model User {
    id    Int     @id @default(autoincrement())
    name  String?
    email String  @unique
    posts Post[]
}

model Post {
    id        Int     @id @default(autoincrement())
    title     String
    content   String?
    published Boolean @default(false)
    authorId  Int?
    author    User?   @relation(fields: [authorId], references: [id])
}
